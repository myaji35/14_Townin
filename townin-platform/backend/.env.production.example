# Townin Platform - Production Environment Variables
# Copy this file to .env.production and fill in actual values
# DO NOT commit .env.production to version control

# Application
NODE_ENV=production
PORT=3000

# Database (Cloud SQL - use Secret Manager in Cloud Run)
# DATABASE_URL will be injected from Secret Manager
# Format: postgresql://townin:PASSWORD@/townin_db?host=/cloudsql/PROJECT_ID:REGION:townin-db

# JWT (use Secret Manager in Cloud Run)
# JWT_SECRET will be injected from Secret Manager
# JWT_REFRESH_SECRET will be injected from Secret Manager
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# AWS S3 (for legacy compatibility - consider migrating to GCS)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=

# Google Cloud Storage (recommended)
GCS_PROJECT_ID=townin-platform
GCS_FLYER_BUCKET=townin-platform-flyer-images
GCS_PUBLIC_BUCKET=townin-platform-public-data

# Firebase
FIREBASE_PROJECT_ID=townin-platform
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Google Maps API
GOOGLE_MAPS_API_KEY=

# Redis (optional - for caching)
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# CORS
CORS_ORIGIN=https://townin.kr,https://www.townin.kr

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
